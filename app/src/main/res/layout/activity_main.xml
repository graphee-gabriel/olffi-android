<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.olffi.app.olffi.MainActivity">

    <include layout="@layout/layout_brand" />

    <LinearLayout android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_half"
        >
        <RelativeLayout style="@style/WW"
            android:layout_margin="@dimen/margin_half">

            <Button android:id="@+id/buttonLinkedIn"
                style="@style/Button"
                android:text="@string/button_log_in_li"
                android:background="@drawable/bg_button_li"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_ic_left"
                android:layout_width="@dimen/icon_button_left_linkedin"
                android:layout_height="@dimen/icon_button_left_linkedin"
                android:src="@drawable/ic_linkedin"
                android:elevation="2dp"
                />
        </RelativeLayout>
        <RelativeLayout style="@style/WW"
            android:layout_margin="@dimen/margin_half">
            <Button android:id="@+id/buttonFacebook"
                style="@style/MW"
                android:text="@string/button_log_in_fb"
                android:background="@drawable/bg_button_fb"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_ic_left"
                android:layout_width="@dimen/icon_button_left_facebook"
                android:layout_height="@dimen/icon_button_left_facebook"
                android:src="@drawable/ic_facebook"
                android:elevation="2dp"
                />
        </RelativeLayout>


        <LinearLayout android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button android:id="@+id/buttonSignUp"
                style="@style/MW"
                android:layout_margin="@dimen/margin_half"
                android:text="@string/button_sign_up"
                android:layout_weight="0.5" />

            <Button android:id="@+id/buttonSignIn"
                style="@style/MW"
                android:layout_margin="@dimen/margin_half"
                android:text="@string/button_log_in"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
