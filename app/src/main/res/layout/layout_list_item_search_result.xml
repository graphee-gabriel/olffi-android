<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    style="@style/MW">

    <android.support.v7.widget.CardView
        style="@style/MW"
        android:layout_margin="@dimen/margin_quarter"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@color/colorCardBackground">
        <LinearLayout
            style="@style/MW.Vertical"
            android:padding="@dimen/margin_half">

            <com.olffi.app.olffi.view.TextViewApp android:id="@+id/text_title"
                style="@style/TextView.Title.Card"
                android:gravity="start"
                android:padding="@dimen/margin_half"
                tool:text="Test résultat tout ça tout ça" />

            <com.olffi.app.olffi.view.TextViewApp android:id="@+id/text_subtitle"
                style="@style/TextView"
                android:gravity="start"
                android:padding="@dimen/margin_half"
                tool:text="Test résultat tout ça tout ça"
                android:alpha="0.5"/>

            <LinearLayout
                style="@style/MW">
                <com.olffi.app.olffi.view.TextViewApp android:id="@+id/text_left"
                    style="@style/TextView"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="@dimen/margin_half"
                    tool:text="Test résultat tout ça tout ça" />

                <com.olffi.app.olffi.view.TextViewApp android:id="@+id/text_right"
                    style="@style/TextView"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="@dimen/margin_half"
                    tool:text="Test résultat tout ça tout ça" />
            </LinearLayout>
            <com.olffi.app.olffi.view.TextViewApp android:id="@+id/text_details"
                style="@style/TextView"
                android:gravity="start"
                android:padding="@dimen/margin_half"
                tool:text="Test résultat tout ça tout ça" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
