<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MW.Vertical">
    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:visibility="gone"
        />

    <RelativeLayout
        style="@style/MM.Vertical"
        android:gravity="center"
        android:background="@drawable/bg_app_darken"
        android:animateLayoutChanges="true"
        >
        <WebView android:id="@+id/webView"
            style="@style/MM"
            />

        <LinearLayout android:id="@+id/loadingView"
            style="@style/MM.Vertical"
            android:gravity="center"
            android:background="@drawable/bg_app_clear"
            >
            <!--<include layout="@layout/layout_brand" />-->
            <ProgressBar
                android:id="@+id/progressBarCircular"
                android:indeterminateOnly="true"
                android:layout_width="@dimen/progress_bar_circular"
                android:layout_height="@dimen/progress_bar_circular"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>